@page
@model Listings.Pages.BookUpdateModel
@using Listings.Models
@{
    ViewData["Title"] = "Book Edit";
}

<h1>Book List </h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <input type="hidden" asp-for="EditBook.Id" class="mr-5">
        <label>Title</label>
        <input type="text" asp-for="EditBook.Title" class="mr-5">
        <label>Author</label>
        <input type="text" asp-for="EditBook.Author" class="mr-5">
        <label>Completed</label>
        <input type="checkbox" asp-for="EditBook.Completed" class="mr-5">
        <button class="btn btn-primary">Update</button>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
